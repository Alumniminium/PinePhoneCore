<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="TextBlock.Foreground">
        <Setter Property="Foreground" Value="#111111"/>
    </Style>
    <Style Selector="TextBlock.ForegroundAlt">
        <Setter Property="Foreground" Value="#202121"/>
    </Style>
    <Style Selector="TextBlock.Background">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>
    <Style Selector="TextBlock.BackgroundAlt">
        <Setter Property="Foreground" Value="#F2F2F2"/>
    </Style>
    <Style Selector="TextBlock.Important">
        <Setter Property="Foreground" Value="#FF2F20"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
</Styles>
